<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table>
  <thead>
    <tr>
      <th class="target">desciption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td class="target"><%= todo_item.desciption %></td>
        <td class="btn btn-default"><%= link_to 'Show', todo_item %></td>
        <td class="btn btn-default"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td class="btn btn-default"><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Todo Item', new_todo_item_path %></button>
